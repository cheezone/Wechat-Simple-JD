blockquote,
body,
button,
dd,
dl,
dt,
fieldset,
form,
h1,
h2,
h3,
h4,
h5,
h6,
hr,
input,
legend,
li,
ol,
p,
pre,
td,
textarea,
th,
ul {
  margin: 0;
  padding: 0;
  vertical-align: baseline;
}

page {

  background-color: #f6f6f6;
}

.nav {
  background-color: red;
  display: flex;
  line-height: 80rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
  align-items: center;
}

.nav .home-icon image {
  width: 34rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.jd-icon image {
  width: 44rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.nav .search {
  align-items: center;
  background-color: white;
  border-radius: 50rpx;
  flex: 1;
  display: flex;
  margin: 0 20rpx;
  height: 60rpx;
  font-size: small;
}

.nav .search .jd-icon {
  padding: 0 20rpx;
  padding-top: 13rpx;
}

.nav .search .search-icon {
  padding-top: 28rpx;
  padding-right: 5rpx;
}

.jd-icon::after {
  content: "";
  position: absolute;
  border-right: 1px solid #ddd;
  height: 16px;
  top: 42rpx;
  left: 155rpx;
}

.nav .login {
  color: white;
  font-size: 30rpx;
}


