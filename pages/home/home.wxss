.box-list {
  /* flex-direction:row; */
  display: flex;
  flex-wrap: wrap;
}

.box-swiper {
  height: 360rpx;

}

/* Box 列表 */
.box {
  display: flex;
  flex-direction: column;
  margin: 25rpx;
  margin-top: 10rpx;
  font-size: 25rpx;
  align-items: center;
}

.box image {
  margin: 10rpx;
  width: 80rpx;
}

/* Love Floor */
 

.product_warpper:nth-child(odd) {
  padding-right: 10rpx;
}

.product_warpper:nth-child(2n) {
  padding-left: 10rpx;
}

.product_warpper {

  float: left;
  width: 50%;
  box-sizing: border-box;
  padding: 15rpx;
  padding-bottom: 15rpx;
}

.product {
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  padding-bottom: 30rpx;
}

.product .product-title {
  font-size: 24rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  margin-top: 5rpx;
}

.product-title-icon {
  height: 24rpx;
  margin-right: 8rpx;
}

.product-info {
  font-size: 32rpx;
}

.product-info-price {
  font-size: 32rpx;
  color: #fa2c19;
}

.product-info,
.product-title {
  margin: 10rpx 15rpx;
}

.price-info-tag {
  border: 1rpx solid #fa2c19;
  color: #fa2c19;
  font-size: 24rpx;
  padding: 0 8rpx;
  margin-left: 18rpx;
  /* line-height: 14rpx;
  height: 16rpx; */
  border-radius: .2rem;
}

.product-info-similar {

  text-align: center;
  color: grey;
  font-size: 22rpx;
  padding: 8rpx 12rpx;
  background-color: #f0f2f5;
  border-radius: .55rem;
  float: right;
  right: -20rpx;
  position: relative;
}

.product-img {
  width: 100%;
}