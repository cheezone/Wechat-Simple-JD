.banner-bg {
  z-index: -1;
  background-image: linear-gradient(359deg, #e67f71, red 50%);
  position: absolute;
  top: 0;
  left: -25%;
  height: 8rem;
  width: 150%;
  border-bottom-left-radius: 100%;
  border-bottom-right-radius: 100%;
}

/* 头部轮播图 */
.header-swiper {
  height: 296rpx;
  margin: 0 20rpx;
}

.header-swiper .swiper-item image {
  width: 100%;
  border-radius: 30rpx;
}

